doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Taller Clase 007 - Pug
    style.
      :root {
        --bg: #020617;
        --bg-alt: #020617;
        --card: #0f172a;
        --card-soft: #111827;
        --accent: #38bdf8;
        --accent-soft: rgba(56, 189, 248, 0.15);
        --text: #e5e7eb;
        --muted: #9ca3af;
      }

      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      body {
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
        background: radial-gradient(circle at top left, #1e293b 0, #020617 45%, #000 100%);
        color: var(--text);
        min-height: 100vh;
      }

      a {
        color: var(--accent);
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }

      .page {
        max-width: 1100px;
        margin: 0 auto;
        padding: 1.5rem 1.25rem 3rem;
      }

      header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 0;
        border-bottom: 1px solid #1f2937;
        margin-bottom: 1.5rem;
      }

      .logo {
        font-weight: 700;
        font-size: 1.1rem;
        letter-spacing: 0.06em;
      }

      .logo span {
        color: var(--accent);
      }

      nav {
        display: flex;
        gap: 1rem;
        font-size: 0.9rem;
      }

      nav a {
        color: var(--muted);
        text-decoration: none;
        padding: 0.35rem 0.75rem;
        border-radius: 999px;
      }

      nav a:hover {
        background: #0b1220;
        color: var(--text);
      }

      main {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
      }

      .hero {
        display: grid;
        grid-template-columns: minmax(0, 2fr) minmax(0, 1.3fr);
        gap: 1.5rem;
        align-items: center;
      }

      .hero-left h1 {
        font-size: 2.1rem;
        margin-bottom: 0.25rem;
      }

      .hero-left h2 {
        font-size: 1rem;
        font-weight: 500;
        color: var(--muted);
        margin-bottom: 0.75rem;
      }

      .hero-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.4rem;
        margin-bottom: 0.85rem;
      }

      .hero-tag {
        font-size: 0.78rem;
        padding: 0.2rem 0.6rem;
        border-radius: 999px;
        background: #0b1220;
        border: 1px solid #1f2937;
      }

      .hero-left p {
        font-size: 0.95rem;
        color: var(--muted);
        line-height: 1.5;
      }

      .hero-actions {
        margin-top: 1rem;
        display: flex;
        gap: 0.75rem;
        flex-wrap: wrap;
      }

      .btn {
        padding: 0.55rem 1.1rem;
        border-radius: 999px;
        border: 1px solid transparent;
        font-size: 0.9rem;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 0.35rem;
      }

      .btn-primary {
        background: var(--accent);
        color: #0f172a;
        font-weight: 600;
      }

      .btn-primary:hover {
        filter: brightness(1.05);
      }

      .btn-ghost {
        background: transparent;
        border-color: #1f2937;
        color: var(--muted);
      }

      .btn-ghost:hover {
        background: #020617;
        color: var(--text);
      }

      .hero-right {
        background: radial-gradient(circle at top, #1f2937, #020617);
        border-radius: 18px;
        padding: 1.25rem 1.1rem;
        border: 1px solid #1f2937;
        box-shadow: 0 18px 45px rgba(15, 23, 42, 0.8);
      }

      .hero-right h3 {
        font-size: 1rem;
        margin-bottom: 0.4rem;
      }

      .hero-right p {
        font-size: 0.88rem;
        color: var(--muted);
        margin-bottom: 0.9rem;
      }

      .hero-right-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 0.5rem;
      }

      .hero-kpi {
        text-align: right;
      }

      .hero-kpi strong {
        display: block;
        font-size: 1.15rem;
      }

      .hero-kpi span {
        font-size: 0.7rem;
        color: var(--muted);
      }

      .grid {
        display: grid;
        grid-template-columns: repeat(12, minmax(0, 1fr));
        gap: 1rem;
      }

      .section {
        margin-top: 1rem;
      }

      .section-title {
        font-size: 0.95rem;
        text-transform: uppercase;
        letter-spacing: 0.12em;
        color: var(--muted);
        margin-bottom: 0.6rem;
      }

      .card {
        background: var(--card);
        border-radius: 14px;
        padding: 1rem 1.1rem;
        border: 1px solid #111827;
      }

      .card-soft {
        background: var(--card-soft);
      }

      .skills-list {
        display: flex;
        flex-wrap: wrap;
        gap: 0.4rem;
      }

      .skill-pill {
        font-size: 0.78rem;
        padding: 0.23rem 0.6rem;
        border-radius: 999px;
        background: #020617;
        border: 1px solid #1f2937;
      }

      .list-simple {
        list-style: none;
        display: flex;
        flex-direction: column;
        gap: 0.4rem;
        font-size: 0.88rem;
        color: var(--muted);
      }

      .timeline {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
      }

      .timeline-item-title {
        font-size: 0.92rem;
        font-weight: 600;
      }

      .timeline-sub {
        font-size: 0.8rem;
        color: var(--muted);
        margin-bottom: 0.2rem;
      }

      .timeline-text {
        font-size: 0.85rem;
        color: var(--muted);
      }

      .projects {
        display: flex;
        flex-direction: column;
        gap: 0.6rem;
      }

      .project-card {
        padding: 0.7rem 0.8rem;
        border-radius: 10px;
        background: #020617;
        border: 1px solid #111827;
      }

      .project-card h4 {
        font-size: 0.9rem;
        margin-bottom: 0.15rem;
      }

      .project-card p {
        font-size: 0.85rem;
        color: var(--muted);
      }

      .contact-info p {
        font-size: 0.88rem;
        color: var(--muted);
        margin-bottom: 0.3rem;
      }

      footer {
        margin-top: 2rem;
        text-align: center;
        font-size: 0.8rem;
        color: var(--muted);
        padding-top: 1rem;
        border-top: 1px solid #111827;
      }

      @media (max-width: 900px) {
        .hero {
          grid-template-columns: minmax(0, 1fr);
        }

        header {
          flex-direction: column;
          align-items: flex-start;
          gap: 0.5rem;
        }
      }

      @media (max-width: 768px) {
        .grid {
          grid-template-columns: minmax(0, 1fr);
        }
      }

  body
    .page
      header
        div.logo
          span &lt;/&gt;
          |  Axel • Portfolio
        nav
          a(href="#sobre-mi") Sobre mí
